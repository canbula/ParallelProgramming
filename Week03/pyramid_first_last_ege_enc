def calculate_pyramid_height(number_of_blocks):
    
    #n + n - 1 + n - 2 + ...
    #= n(n-1)
    
    #n^2 - n = number_of_blocks
    #(n - 1/2)^2 -1/4 = number_of_blocks
    #sqrt(number_of_blocks + 1/4) + 1/2
    n = (number_of_blocks +1/4)**0.5 + 1/2
    
    height = int(n)
    
    return height
  
